@model IEnumerable<Proyecto_Eventos_Progra_V.Models.Evento>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Eventos disponibles</h2>


<table class="table">
    <tr>
        <th>
            @Html.DisplayName("Evento")
        </th>
        <th>
            @Html.DisplayName("Fecha")
        </th>
        <th>
            @Html.DisplayName("Hora")
        </th>
        <th>
            @Html.DisplayName("Lugar")
        </th>
        <th>
            @Html.DisplayName("Tipo")
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.nombre_Evento)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.fecha_Evento)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.hora_Evento)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Lugar.lugar1)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Tipo_Evento.Tipo_Evento1)
        </td>
        <td>
            @Html.ActionLink("Detalles", "Details", new { id=item.id_Evento }) 
        </td>
    </tr>
}

</table>
